<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinda Nur Halisa"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:text="90"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:text="90"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:text="90"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absensi >= 75%"
        android:layout_below="@id/text4"
        android:textSize="15dp"
        />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text5"
        android:layout_toRightOf="@id/text5"
        >
        <RadioButton
            android:id="@+id/rd1"
            android:layout_width="wrap_content"
            android:text="Ya"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rd2"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/rd1"
            android:layout_below="@id/rd1"
            android:layout_height="wrap_content"
            android:text="Tidak"
            />
    </LinearLayout>



    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Nilai Akhir"
        android:layout_below="@id/rd2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nilai Akhir : 54.0"
        android:layout_below="@id/button"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text6"
        android:layout_centerHorizontal="true"
        android:text="C"
        android:textSize="70dp"
        />
    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text7"
        android:layout_centerHorizontal="true"
        android:text="Klik emoticon untuk membagikan nilai akhir."
        />
</RelativeLayout>